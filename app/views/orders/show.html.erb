<h1>Order #<%= @order.id %> - <%= @order.status.capitalize %></h1>
<p><strong>Total:</strong> <%= number_to_currency @order.grand_total %></p>
<p><strong>Tax:</strong> <%= number_to_currency @order.tax_total %></p>

<h2>Products Ordered:</h2>
<ul>
  <% @order.order_items.each do |item| %>
    <li>
      <%= image_tag item.product.images.first, class: 'w-20 h-20 object-cover' if item.product.images.any? %>
      <%= item.product.name %> - 
      <%= item.quantity %> x <%= number_to_currency item.price %> = <%= number_to_currency item.total %>
    </li>
  <% end %>
</ul>