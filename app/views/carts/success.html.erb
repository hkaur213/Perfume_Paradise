<div class="w-full flex flex-col items-center bg-gray-50 text-indigo-900 py-8">
  <!-- Hero Section -->
  <div class="h-[40vh] w-full mb-8 flex flex-col items-center justify-center gap-4 bg-indigo-200 rounded-lg shadow-lg">
    <h2 class="text-4xl md:text-5xl font-bold text-indigo-700 animate-bounce">Thank You for Your Purchase!</h2>
    <p class="text-lg md:text-xl text-indigo-600">Your products will be shipped shortly!</p>
    <div class="mt-4">
      <!-- Embedded SVG for celebration -->
      <svg class="h-16 md:h-24 text-indigo-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 2a1 1 0 011 1v1.6c.75.32 1.5.71 2.2 1.15a1 1 0 01.2 1.6L13.8 9.1a1 1 0 01-1.6-.2L11 7a11.65 11.65 0 00-1.2.85 1 1 0 01-1.6-.2L7 6a1 1 0 01.2-1.6A9.33 9.33 0 0112 2zM7 13a1 1 0 011.6-.2l1.2.85a11.65 11.65 0 001.2-.85 1 1 0 011.6.2l1.2 1.7a1 1 0 01-.2 1.6 9.33 9.33 0 01-5.2 1.8A9.33 9.33 0 016.8 16a1 1 0 01-.2-1.6L7 13zm10 1a1 1 0 011.6-.2 9.33 9.33 0 01-5.2 1.8A9.33 9.33 0 017.8 14a1 1 0 011.6-.2l1.2 1.7a1 1 0 01-.2 1.6 11.65 11.65 0 00-1.2-.85 1 1 0 01-.2-1.6L10 13a1 1 0 01.2-1.6 11.65 11.65 0 001.2-.85 1 1 0 01.2 1.6l-1.2 1.7a1 1 0 011.6.2l1.2-.85A11.65 11.65 0 0016 14a1 1 0 011.6-.2L19 12z"/>
      </svg>
    </div>
  </div>

  <!-- Purchased Items List -->
  <div class="mx-auto w-full max-w-2xl flex flex-col gap-4">
    <% @items.each.with_index do |item, index| %>
      <div class="flex items-center gap-4 bg-gray-200 p-4 rounded-lg shadow-md">
        <span class="px-4 py-2 rounded-full bg-indigo-300 text-indigo-900 font-bold">
          <%= index + 1 %>
        </span>
        <div class="flex-1">
          <p class="font-semibold text-lg text-indigo-700"><%= item.product.description %></p>
          <p class="text-indigo-500">Quantity: <%= item.quantity %></p>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Total Summary Section -->
  <div class="mt-8 w-full max-w-2xl bg-gray-200 p-6 rounded-lg shadow-md">
    <h3 class="text-2xl font-semibold text-indigo-700 mb-4">Order Summary</h3>
    <div class="text-lg">
      <p class="mb-2"><span class="font-semibold">Subtotal:</span> <%= number_to_currency @total_amount - @tax %></p>
      <p class="mb-2"><span class="font-semibold">Tax:</span> <%= number_to_currency @tax %></p>
      <p class="mb-2 font-bold text-xl"><span class="font-semibold">Total:</span> <%= number_to_currency @total_amount %></p>
    </div>
  </div>
</div>
